{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=WatchStore.db"
  },
  "Jwt": {
    "Key": "your-super-secret-key-with-minimum-16-characters",
    "Issuer": "watch-store-api",
    "Audience": "watch-store-client",
    "DurationInMinutes": 60
  },
  "Stripe": {
    "SecretKey": "your_stripe_secret_key",
    "WebhookSecret": "your_stripe_webhook_secret"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
